<script>
    function clearErrors() {
        document.getElementById("RepledgerPhoneNumber1Error").innerText = "";
        document.getElementById("RepledgerNameError").innerText = "";
        document.getElementById("RepledgerAddressError").innerText = "";
        document.getElementById("CityError").innerText = "";
        document.getElementById("StateError").innerText = "";
        document.getElementById("CountryError").innerText = "";
        document.getElementById("PincodeError").innerText = "";
    }

    function validateGet() {
        clearErrors();
        const phone1 = document.getElementById("RepledgerPhoneNumber1").value.trim();
        if (!phone1) {
            document.getElementById("RepledgerPhoneNumber1Error").innerText = "Mobile Number1 is required to fetch data.";
            return false;
        }
        return true;
    }

    function validateSave() {
        clearErrors();
        let valid = true;

        const phone1 = document.getElementById("RepledgerPhoneNumber1").value.trim();
        const name = document.getElementById("RepledgerName").value.trim();
        const address = document.getElementById("RepledgerAddress").value.trim();
        const city = document.getElementById("City").value.trim();
        const state = document.getElementById("State").value.trim();
        const country = document.getElementById("Country").value.trim();
        const pincode = document.getElementById("Pincode").value.trim();

        if (!phone1) {
            document.getElementById("RepledgerPhoneNumber1Error").innerText = "Mobile Number1 cannot be empty.";
            valid = false;
        }
        if (!name) {
            document.getElementById("RepledgerNameError").innerText = "Repledger Name cannot be empty.";
            valid = false;
        }
        if (!address) {
            document.getElementById("RepledgerAddressError").innerText = "Address cannot be empty.";
            valid = false;
        }
        if (!city) {
            document.getElementById("CityError").innerText = "City cannot be empty.";
            valid = false;
        }
        if (!state) {
            document.getElementById("StateError").innerText = "State cannot be empty.";
            valid = false;
        }
        if (!country) {
            document.getElementById("CountryError").innerText = "Country cannot be empty.";
            valid = false;
        }
        if (!pincode) {
            document.getElementById("PincodeError").innerText = "Pincode cannot be empty.";
            valid = false;
        }

        return valid;
    }

    function validateDelete() {
        clearErrors();
        const phone1 = document.getElementById("RepledgerPhoneNumber1").value.trim();
        if (!phone1) {
            document.getElementById("RepledgerPhoneNumber1Error").innerText = "Mobile Number1 is required to delete data.";
            return false;
        }
        return true;
    }
</script>





<script>
    function allowOnlyDigits(input) {
        input.value = input.value.replace(/[^0-9]/g, '');
    }
</script>
