                    {
                        int totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);

                        for (int i = 1; i <= totalPages; i++)
                        {
                            <a href="@Url.Action("CategoryMaster", new { page = i })" class="@(Model.CurrentPage == i ? "btn btn-primary" : "btn btn-secondary")">
