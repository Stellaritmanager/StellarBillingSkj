 @model BillTableModel

@{
    ViewData["Title"] = "CustomerBilling";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


<form asp-controller="StellarBilling" asp-action="getCustomerBill">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12 col-lg-1">
        </div>
        <div class="col-md-12 col-lg-10">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">CustomerBilling</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row" style="height:8%">
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-1">
        </div>
        <div class="col-md-12 col-lg-4">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="BillID" class="form-control" placeholder="BillID" required />
                        <label asp-for="BillID" class="control-label">BillID</label>

                        <span asp-validation-for="BillID" class="text-danger"></span>
                    </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="BillDate" class="form-control" placeholder="BillDate" />
                        <label asp-for="BillDate" class="control-label">BillDate</label>

                        <span asp-validation-for="BillDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="ProductID" class="form-control" placeholder="ProductID" />
                        <label asp-for="ProductID" class="control-label">ProductID</label>

                        <span asp-validation-for="ProductID" class="text-danger"></span>
                    </div>

                    <button type="submit" style="width:180px" value="Get" name="buttonType" class="btn btn-primary">Get</button>
                    </div>
                    </div>
                    </div>
                    

    <div class="col-md-12 col-lg-4">
                            <div class="card">
                                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Discount" class="form-control" placeholder="Discount" />
                        <label asp-for="Discount" class="control-label">Discount</label>

                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                     <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                        <label asp-for="Price" class="control-label">Price</label>

                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                     <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                        <label asp-for="Quantity" class="control-label">Quantity</label>

                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                     <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="NetPrice" class="form-control" placeholder="NetPrice" />
                        <label asp-for="NetPrice" class="control-label">NetPrice</label>

                        <span asp-validation-for="NetPrice" class="text-danger"></span>
                    </div>

                     <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Totalprice" class="form-control" placeholder="Totalprice" />
                        <label asp-for="Totalprice" class="control-label">Totalprice</label>

                        <span asp-validation-for="Totalprice" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="TotalDiscount" class="form-control" placeholder="TotalDiscount" />
                        <label asp-for="TotalDiscount" class="control-label">TotalDiscount</label>

                        <span asp-validation-for="TotalDiscount" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CustomerNumber" class="form-control" placeholder="CustomerNumber" />
                        <label asp-for="CustomerNumber" class="control-label">CustomerNumber</label>

                        <span asp-validation-for="CustomerNumber" class="text-danger"></span>
                    </div>

                </div>
            </div>

        
       
        <center>
         
          

           
        </center>
    
   

    <button type="submit" style="width:180px" value="Save" name="buttonType" class="btn btn-primary">Save</button>

    <button type="submit" style="width:180px" value="Delete" name="buttonType" class="btn btn-primary">Delete</button>

    <button type="submit" style="width:180px" value="Paymet" name="buttonType" class="btn btn-primary">Payment</button>

    

  
    <div class="col-md-12 col-lg-1" style="height=10%">
        <div class="form-floating form-floating-outline mb-4">
        </div>
        </div>
        </div>
        <div class="col-md-12 col-lg-4">
    
    </div>
</form>
