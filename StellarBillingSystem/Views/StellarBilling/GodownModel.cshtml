@model GodownModel

@{
    ViewData["Title"] = "GodownModel";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">Godown</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style="height:8%">
    </div>
    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                    <div class="form-floating form-floating-outline mb-4">
                    <input asp-for="ProductID" class="form-control" placeholder="Product ID" required />
                <label asp-for="ProductID" class="control-label"></label>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="NumberofStocks" class="form-control" placeholder="Number of Stocks" />
                <label asp-for="NumberofStocks" class="control-label"></label>
                <span asp-validation-for="NumberofStocks" class="text-danger"></span>
            </div>

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="DatefofPurchase" class="form-control" placeholder="DatefofPurchase" />
                        <label asp-for="DatefofPurchase" class="control-label">DatefofPurchase</label>
                        <span asp-validation-for="DatefofPurchase" class="text-danger"></span>
            </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="SupplierInformation" class="form-control" placeholder="SupplierInformation" />
                        <label asp-for="SupplierInformation" class="control-label">SupplierInformation</label>
                        <span asp-validation-for="SupplierInformation" class="text-danger"></span>
            </div>
                    <br />

                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
                    <div class="form-group">
                        <center>
            <button type="submit" value="Create" asp-action="AddGodownstock" class="btn btn-primary">Save</button>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success">
                                    @ViewBag.Message
                                </div>
                            }
                        </center>
                    </div>





        </form>
