@model GodownModel

@{
    ViewData["Title"] = "GodownModel";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}
<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">Godown Stock Master</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style="height:8%">
    </div>
    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                    <div class="form-floating form-floating-outline mb-4">
                        @{
                            var screenList = ((IEnumerable<ProductMatserModel>)ViewData["godownproductid"])
                            .Select(m => new SelectListItem
            {
                Value = m.ProductID.ToString(), // Assuming ScreenId is of type int
                Text = $"{m.ProductID} - {m.ProductName}"
            });
                        }

                        @Html.DropDownListFor(model => model.ProductID, screenList, "Select Product ID", new { @class = "form-control", @required = "required" })
                        <label asp-for="ProductID" class="control-label">Product ID</label>
                        <span asp-validation-for="ProductID" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="NumberofStocks" value="@Model.NumberofStocks" class="form-control" placeholder="Number of Stocks" />
                        <label asp-for="NumberofStocks" class="control-label">Number of Stocks</label>
                <span asp-validation-for="NumberofStocks" class="text-danger"></span>
            </div>

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="DatefofPurchase" type="date" value="@Model.DatefofPurchase" class="form-control" placeholder="Date of Purchase" required/>
                        <label asp-for="DatefofPurchase"  class="control-label">Date of Purchase</label>
                        <span asp-validation-for="DatefofPurchase" class="text-danger"></span>
            </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="SupplierInformation" value="@Model.SupplierInformation" class="form-control" placeholder="Supplier Information" required/>
                        <label asp-for="SupplierInformation" class="control-label">Supplier Information</label>
                        <span asp-validation-for="SupplierInformation" class="text-danger"></span>
            </div>
                    <br />

                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
                    <div class="form-group">
                        <center>
            <button type="submit" value="Save" name="buttonType" asp-action="GodDown" class="btn btn-primary">Save</button>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success">
                                    @ViewBag.Message
                                </div>
                            }
                        </center>
                    </div>

    <div class="form-group">
        <center>
            <button type="submit" value="Delete" name="buttonType" asp-action="GodDown" class="btn btn-primary">Delete</button>
            @if (ViewBag.delMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.delMessage
                </div>
            }
            @if (ViewBag.nostockMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.nostockMessage
                </div>
            }

        </center>
    </div>

    <div class="form-group">
        <center>
            <button type="submit" value="Get" name="buttonType" asp-action="GodDown" class="btn btn-primary">Get</button>
            @if (ViewBag.getMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.getMessage
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.ErrorMessage
                </div>
            }

        </center>
    </div>





        </form>
