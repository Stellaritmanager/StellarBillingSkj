@model VoucherMasterModel

@{
    ViewData["Title"] = "VoucherMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}



<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-color:#8c62c9">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="container">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">Voucher Master</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row" style="height:8%">
    </div>
    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherID" class="form-control" placeholder="Voucher ID" required />
                <label asp-for="VoucherID" class="control-label"></label>
                <span asp-validation-for="VoucherID" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherNumber" class="form-control" placeholder="Voucher Number"/>
                <label asp-for="VoucherNumber" class="control-label"></label>
                <span asp-validation-for="VoucherNumber" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VocherCost" class="form-control" placeholder="Voucher Cost" />
                <label asp-for="VocherCost" class="control-label"></label>
                <span asp-validation-for="VocherCost" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="VocherDetails" class="form-control" placeholder="Vocher Details"/>
                <label asp-for="VocherDetails" class="control-label"></label>
                <span asp-validation-for="VocherDetails" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="ExpiryDate" class="form-control" placeholder="Expiry Date" type="date" />
                <label asp-for="ExpiryDate" class="control-label"></label>
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
                    <br />

                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <br />
    <div class="form-group">
        <center>
            <button type="submit" value="Create" class="btn btn-primary" asp-action="AddVoucher">Save</button>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
        </center>
    </div>
    
        </form>



