@model ClassLibrary1.ProductMatserModel

@{
    ViewData["Title"] = "ProductMasterModel";
}


<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">
                <div class="col-md-12 col-lg-2">
                </div>
                <div class="col-md-12 col-lg-8">
                    <div class="card">
                        <div class="card-body " style="background-color:#8c62c9">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div class="container">
                                    <h2 class="centered text-white" style="font-family:'Lucida Bright'">ProductMatserModel</h2>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="row" style="height:8%">
            </div>

    <div class="row gy-4">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-4">
            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CategoryID" class="form-control" placeholder="CategoryID" />
                        <label asp-for="CategoryID" class="control-label"></label>
                     
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="ProductID" class="form-control" placeholder="ProductID" />
                <label asp-for="ProductID" class="control-label"></label>
               
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="ProductName" class="form-control" placeholder="ProductName" />
                <label asp-for="ProductName" class="control-label"></label>
               
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Brandname" class="form-control" placeholder="Brandname" />
                <label asp-for="Brandname" class="control-label"></label>
              
                <span asp-validation-for="Brandname" class="text-danger"></span>
            </div>

                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">


            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                <label asp-for="Price" class="control-label"></label>
                
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="Discount" class="form-control" placeholder="Discount" />
                <label asp-for="Discount" class="control-label"></label>
               
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="TotalAmount" class="form-control" placeholder="TotalAmount" />
                <label asp-for="TotalAmount" class="control-label"></label>
             
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

                    <br />
                </div>
            </div>

            <div class="col-md-12 col-lg-1" style="height=10%">
                <div class="form-floating form-floating-outline mb-4">
                </div>
            </div>
            <div class="form-group">
                <center>

                    <button type="submit" style="width:180px" asp-action="AddProduct" value="Create" class="btn btn-primary">Save</button>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">


                            @ViewBag.Message
                        </div>
                    }
                </center>
            </div>
        </div>
    </div>
</form>

  