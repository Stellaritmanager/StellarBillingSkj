@model BranchMasterModel

@{
    ViewData["Title"] = "BranchMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


<div id="popupMessage" class="dividerblack popborder" style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #f0f0f0; color: black; padding: 30px; border-radius: 10px; z-index: 1000; display: none; text-align: center;">
    <span id="popupMessageText" style="display: block; margin-bottom: 10px;"></span>
    <button id="popupOKButton" style="padding: 10px 20px; color: white; border: none; border-radius: 5px; cursor: pointer;">OK</button>
</div>

<style>
    .popborder {
        border: 10px solid #fff;
    }
</style>

<form asp-controller="StellarBilling" asp-action="GetBranchMaster">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12 col-lg-2">
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card" style="height:40px">
                <div class="card-body dividerblack">
                    <div style="align-items:center">
                        <div class="container" style="text-align:center">
                            <h2 class="centered text-white" style="font-family:'Lucida Bright'">Branch Master</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row" style="margin-top:50px">
        <div class="col-md-12 col-lg-2">
        </div>



        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body dividerblack">

                    <div class="row">

                        <div class="col-md-12 col-lg-6">
                            <div class="form-floating form-floating-outline mb-4">

                                <input asp-for="BracnchID" class="form-control" placeholder="Bracnch ID"  value="@Model.BracnchID" required />
                                <label asp-for="BracnchID" class="control-label">Bracnch ID</label>

                                <span asp-validation-for="BracnchID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-2">
                            <button type="submit" style="width:100px" value="Get" name="buttontype" class="btn btn-primary">Get</button>
                        </div>

                    </div>



                    <div class="row">



                        <div class="col-md-12 col-lg-6">


                            <div class="form-floating form-floating-outline mb-4">
                                <input asp-for="BranchName" class="form-control" placeholder="Branch Name" value="@Model.BranchName"  />
                                <label asp-for="BranchName" class="control-label">Branch Name</label>

                                <span asp-validation-for="BranchName" class="text-danger"></span>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input asp-for="PhoneNumber1" class="form-control" placeholder="Phone Number1" value="@Model.PhoneNumber1" pattern="^\d{10}$" title="Mobile Number should be exactly 10 digits" />
                                <label asp-for="PhoneNumber1" class="control-label">Phone Number1</label>

                                <span asp-validation-for="PhoneNumber1" class="text-danger"></span>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input asp-for="PhoneNumber2"  class="form-control" placeholder="PhoneNumber2" value="@Model.PhoneNumber2" pattern="^\d{10}$" title="Mobile Number should be exactly 10 digits" />
                                <label asp-for="PhoneNumber2" class="control-label">Phone Number2</label>

                                <span asp-validation-for="PhoneNumber2" class="text-danger"></span>
                            </div>

                            <div class="input-group input-group-merge speech-to-text form-floating form-floating-outline mb-4">
                                <textarea asp-for="Address1" class="form-control" placeholder="Branch Address1" aria-describedby="text-to-speech-addon"></textarea>
                                <label asp-for="Address1" class="control-label">Branch Address1</label>
                                <span class="input-group-text" id="text-to-speech-addon">
                                    <i class="mdi mdi-microphone-outline cursor-pointer text-to-speech-toggle"></i>
                                </span>
                                <span asp-validation-for="Address1" class="text-danger"></span>
                            </div>

                            <div class="input-group input-group-merge speech-to-text form-floating form-floating-outline mb-4">
                                <textarea asp-for="Address2" class="form-control" placeholder="Branch Address2" aria-describedby="text-to-speech-addon"></textarea>
                                <label asp-for="Address2" class="control-label">Branch Address2</label>
                                <span class="input-group-text" id="text-to-speech-addon">
                                    <i class="mdi mdi-microphone-outline cursor-pointer text-to-speech-toggle"></i>
                                </span>
                                <span asp-validation-for="Address1" class="text-danger"></span>
                            </div>



                        </div>

                        <div class="col-md-12 col-lg-6">
                           

                            <div class="form-floating form-floating-outline mb-4">

                                <input asp-for="Country" class="form-control" placeholder="Country" value="@Model.Country" />
                                <label asp-for="Country" class="control-label">Country</label>

                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="form-floating form-floating-outline mb-4">

                                <input asp-for="State" class="form-control" placeholder="State" value="@Model.State" />
                                <label asp-for="State" class="control-label">State</label>

                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>


                            <div class="form-floating form-floating-outline mb-4">

                                <input asp-for="City" class="form-control" placeholder="City" value="@Model.City" />
                                <label asp-for="City" class="control-label">City</label>

                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        

                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" value="@Model.ZipCode" />
                            <label asp-for="ZipCode" class="control-label">ZipCode</label>

                            <span asp-validation-for="ZipCode" class="text-danger"></span>

                        </div>
                        <div class="form-floating form-floating-outline mb-4">

                            <input asp-for="email" class="form-control" placeholder="email" value="@Model.email" />
                            <label asp-for="email" class="control-label">email</label>

                            <span asp-validation-for="email" class="text-danger"></span>

                        </div>
                        

                        
                            <label class="control-label">IsFranchise</label>
                            <div class="form-check">
                                <input asp-for="IsFranchise" class="form-check-input" type="radio" value="Yes" id="Yes" />
                                <label class="form-check-label" for="Yes">Yes</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsFranchise" class="form-check-input" type="radio" value="No" id="No" />
                                <label class="form-check-label" for="No">No</label>
                            
                          
                            <span asp-validation-for="IsFranchise" class="text-danger"></span>
                        </div>
                        </div>




                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-2">
        </div>
    </div>
    <div class="row" style="margin-top:30px">
       
        <div class="form-group">
            <br />
            <center>
                <button type="submit" style="width:180px" value="Save" name="buttontype" class="btn btn-primary">Save</button>
                <button type="submit" style="width:180px" value="Delete" name="buttontype" class="btn btn-primary">Delete</button>
                <button type="submit" style="width:180px" value="DeleteRetrieve" name="buttontype" class="btn btn-primary">DeleteRetrieve</button>

            </center>
        </div>
      
    </div>

    @if (ViewBag.Message != null)
    {
        <script>
            handleMessages("@ViewBag.Message");
        </script>
    }

    @if (ViewBag.getMessage != null)
    {
        <script>
            handleMessages("@ViewBag.getMessage");
        </script>
    }

    @if (ViewBag.delMessage != null)
    {
        <script>
            handleMessages("@ViewBag.delMessage");
        </script>
    }

    @if (ViewBag.delnoMessage != null)
    {
        <script>
            handleMessages("@ViewBag.delnoMessage");
        </script>
    }

    @if (ViewBag.retMessage != null)
    {
        <script>
            handleMessages("@ViewBag.retMessage");
        </script>

    }

    @if (ViewBag.noretMessage != null)
    {
        <script>
            handleMessages("@ViewBag.noretMessage");
        </script>
    }

    @if (ViewBag.BMessage != null)
    {
        <script>
            handleMessages("@ViewBag.BMessage");
        </script>
    }


    <script>
        function showPopup(message) {
            var popup = document.getElementById("popupMessage");
            var popupText = document.getElementById("popupMessageText");
            var popupOKButton = document.getElementById("popupOKButton");

            popupOKButton.addEventListener("click", function () {
                popup.style.display = "none"; // Hide the popup when OK button is clicked
            });
        }

        function handleMessages(message) {
            showPopup(message);
        }

    </script>


</form>







