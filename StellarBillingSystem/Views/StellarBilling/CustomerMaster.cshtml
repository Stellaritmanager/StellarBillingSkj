@model CustomerMasterModel

@{
    ViewData["Title"] = "Customer Master";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">
                <div class="col-md-12 col-lg-2">
                </div>
                <div class="col-md-12 col-lg-8">
                    <div class="card">
                        <div class="card-body " style="background-color:#8c62c9">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div class="container">
                                    <h2 class="centered text-white" style="font-family:'Lucida Bright'">CustomerMaster</h2>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="row" style="height:8%">
            </div>

            <div class="row">
                <div class="col-md-12 col-lg-2">
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="card">
                        <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CustomerID" class="form-control" placeholder="Customer ID" />
                        <label asp-for="CustomerID" class="control-label">Customer ID</label>
                       
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CustomerName" class="form-control" placeholder="Customer Name"/>
                        <label asp-for="CustomerName" class="control-label">Customer Name</label>
                        
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="DateofBirth" type="date" class="form-control" placeholder="Date of Birth" />
                        <label asp-for="DateofBirth" class="control-label">Date of Birth</label>
                        
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>

                    <div class="mb-4">
                        <label class="control-label">Gender</label>
                        <div class="form-check">
                            <input asp-for="Gender" class="form-check-input" type="radio" value="Male" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Gender" class="form-check-input" type="radio" value="Female" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Gender" class="form-check-input" type="radio" value="Other" id="genderOther" />
                            <label class="form-check-label" for="genderOther">Other</label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>


                    <div class="input-group input-group-merge speech-to-text form-floating form-floating-outline mb-4">
                        <textarea asp-for="Address" class="form-control" placeholder="Customer Address" aria-describedby="text-to-speech-addon"></textarea>
                        <label asp-for="Address" class="control-label">Customer Address</label>
                        <span class="input-group-text" id="text-to-speech-addon">
                            <i class="mdi mdi-microphone-outline cursor-pointer text-to-speech-toggle"></i>
                        </span>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="City" class="form-control" placeholder="City" />
                        <label asp-for="City" class="control-label"></label>

                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">


            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                   
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" required/>
                        <label asp-for="MobileNumber" class="control-label">Mobile Number</label>
                       
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
                    <button type="submit" style="width:180px" value="Create" asp-action="GetCustomer" class="btn btn-primary">Get</button>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">

                            @ViewBag.ErrorMessage
                        </div>
                    }
             @*        <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="PointsReedem" class="form-control" placeholder="PointsReedem" />
                <label asp-for="PointsReedem" class="control-label"></label>
                       
                <span asp-validation-for="PointsReedem" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherDiscount" class="form-control" placeholder="VoucherDiscount" />
                <label asp-for="VoucherDiscount" class="control-label"></label>
                      
                <span asp-validation-for="VoucherDiscount" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherNumber" class="form-control" placeholder="VoucherNumber" />
                <label asp-for="VoucherNumber" class="control-label"></label>
                     
                <span asp-validation-for="VoucherNumber" class="text-danger"></span>
            </div> *@

                    <br />
                </div>
            </div>

            <br/>

            <div class="form-group">
                <center>

                    <button type="submit" style="width:180px" value="Create" asp-action="AddCustomer" class="btn btn-primary">Save</button>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">


                            @ViewBag.Message
                        </div>
                    }
                </center>
            </div>

            <div class="form-group">
                <center>

            <button type="submit" style="width:180px" value="Create" asp-action="DeleteCustomer" class="btn btn-primary">Delete</button>
                </center>
                @if (ViewBag.delMessage != null)
                {
                    <div class="alert alert-success">


                        @ViewBag.delMessage
                    </div>
                }
            </div>

            <div class="form-group">
                <center>
            <button type="submit" style="width:180px" value="Create" asp-action="GetDeleteRetrieve" class="btn btn-primary">DeleteRetrieve</button>
                </center>
                @if (ViewBag.DelRetrieve != null)
                {
                    <div class="alert alert-success">


                        @ViewBag.DelRetrieve
                    </div>
                }
            </div>



            <div class="col-md-12 col-lg-1" style="height=10%">
                <div class="form-floating form-floating-outline mb-4">
                </div>
            </div>

        </div>
    </div>
        <div class="col-md-12 col-lg-4">
        </div>
          
       
  

            
        </form>
  