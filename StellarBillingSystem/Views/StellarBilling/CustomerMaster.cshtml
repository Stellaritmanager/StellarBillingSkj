@model CustomerMasterModel

@{
    ViewData["Title"] = "CustomerMaster";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<form asp-controller="StellarBilling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">
                <div class="col-md-12 col-lg-2">
                </div>
                <div class="col-md-12 col-lg-8">
                    <div class="card">
                        <div class="card-body " style="background-color:#8c62c9">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div class="container">
                                    <h2 class="centered text-white" style="font-family:'Lucida Bright'">CustomerMaster</h2>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="row" style="height:8%">
            </div>

            <div class="row">
                <div class="col-md-12 col-lg-2">
                </div>
                <div class="col-md-12 col-lg-4">
                    <div class="card">
                        <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CustomerID" class="form-control" placeholder="CustomerID" required />
                <label asp-for="CustomerID" class="control-label"></label>
                       
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="CustomerName" class="form-control" placeholder="CustomerName" required/>
                <label asp-for="CustomerName" class="control-label"></label>
                        
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">
                        <input asp-for="DateofBirth" type="date" class="form-control" placeholder="DateofBirth" />
                <label asp-for="DateofBirth" class="control-label"></label>
                        
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="Gender" class="form-control" placeholder="Gender" />
                <label asp-for="Gender" class="control-label"></label>
                        
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

                    <div class="input-group input-group-merge speech-to-text form-floating form-floating-outline mb-4">
                        <textarea asp-for="Address" class="form-control" placeholder="ClinicAddress" aria-describedby="text-to-speech-addon"></textarea>
                        <label asp-for="Address" class="control-label"></label>
                        <span class="input-group-text" id="text-to-speech-addon">
                            <i class="mdi mdi-microphone-outline cursor-pointer text-to-speech-toggle"></i>
                        </span>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="City" class="form-control" placeholder="City" />
                        <label asp-for="City" class="control-label"></label>

                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>


                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">


            <div class="card">
                <div class="card-body " style="background-image: linear-gradient(to right, #FFFFFF 0%, #FFFFFF 51%, #ece5f6 100%);">


                   
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="MobileNumber" class="form-control" placeholder="MobileNumber" required/>
                <label asp-for="MobileNumber" class="control-label"></label>
                       
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
             @*        <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="PointsReedem" class="form-control" placeholder="PointsReedem" />
                <label asp-for="PointsReedem" class="control-label"></label>
                       
                <span asp-validation-for="PointsReedem" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherDiscount" class="form-control" placeholder="VoucherDiscount" />
                <label asp-for="VoucherDiscount" class="control-label"></label>
                      
                <span asp-validation-for="VoucherDiscount" class="text-danger"></span>
            </div>
                    <div class="form-floating form-floating-outline mb-4">

                        <input asp-for="VoucherNumber" class="form-control" placeholder="VoucherNumber" />
                <label asp-for="VoucherNumber" class="control-label"></label>
                     
                <span asp-validation-for="VoucherNumber" class="text-danger"></span>
            </div> *@

                    <br />
                </div>
            </div>

            <br/>

            <div class="form-group">
                <center>

                    <button type="submit" style="width:180px" value="Create" asp-action="AddCustomer" class="btn btn-primary">Save</button>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">


                            @ViewBag.Message
                        </div>
                    }
                </center>
            </div>

            <div class="col-md-12 col-lg-1" style="height=10%">
                <div class="form-floating form-floating-outline mb-4">
                </div>
            </div>

        </div>
    </div>
        <div class="col-md-12 col-lg-4">
        </div>
          
       
  

            
        </form>
  